#VRML V2.0 utf8


#Cartel
Anchor {
	url	"../VRML/cursoVRML/toc.htm"
	description	"Entra al Curso de VRML 2.0!"
	children Transform {
			scale 0.6 0.6 0.6
		children Billboard {
			axisOfRotation 0 1 0
			children Inline	{
				url	"ej02.wrl"
			}
			bboxCenter 0 0 0
			bboxSize -1 -1 -1
		}
	}
	bboxCenter 0 0 0
	bboxSize -1 -1 -1
}

#Mu√±ecos
Transform {
	translation	0 -1 0
	children [	 
		Transform {	 
			translation	0 0 3
			children DEF munyeco Inline	{
				url	"ej04_munyeco.wrl"
				bboxCenter 0 0 0
				bboxSize -1 -1 -1
			}
		}
		Transform {	 
			scale 0.8 0.8 0.8
			rotation 0 1 0 1.57
			translation	3 0 0
			children USE munyeco
		}  
		Transform {	 
			scale 0.6 0.6 0.6
			rotation 0 1 0 3.14
			translation	0 0 -3
			children USE munyeco
		}
		Transform {	 
			scale 0.4 0.4 0.4
			rotation 0 1 0 -1.57
			translation	-3 0 0
			children USE munyeco
		}
	]
}