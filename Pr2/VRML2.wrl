# Pantalla
#------------------------------	
Transform {
	translation	0 1.8 -5.9
	children Shape {
		geometry Box {
			size 6 3.5 0.2
		}
		appearance Appearance {
			texture MovieTexture {
				url "monstruo.mpg"
				speed 1
				loop TRUE
				startTime 1 
				stopTime 0 
				repeatS TRUE 
				repeatT TRUE 
    		}
		}
	}
} 

