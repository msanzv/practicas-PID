#------------------------------
# Esfera m√≥vil
#------------------------------
DEF	Esfera Transform {
	children [ 
		Transform {
			translation	0 -1 0
			children [
				Shape {
					appearance Appearance {
						material Material {
							diffuseColor 1 0 0
						}
					}
					geometry Sphere	{
						radius 1
					}
				},
				DEF	PSensor PlaneSensor	{}
			]
		}
	]
	ROUTE PSensor.translation_changed
	TO Esfera.translation
}


