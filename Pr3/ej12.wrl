#------------------------------
# Antorchas
#------------------------------
Transform {
	translation	0 0 -11.7
	children [ 
		DEF Antorcha LOD {
			range [ 18, 24 ]
			level [
				Inline { url "../../VRML/cursoVRML/torchigh.wrl"}
				Inline { url "../../VRML/cursoVRML/torchmed.wrl"}
				Inline { url "../../VRML/cursoVRML/torchlow.wrl"}
			]
		}
	]
}
Transform {
	translation	-10 0 -11.7
	children [ 
		USE Antorcha   
	]
}
Transform {
	translation	 10 0 -11.7
	children [
		USE Antorcha	 
	]
}

#------------------------------
# Luces de antorchas
#------------------------------
DEF LuzAntorchaCentro Transform {
	translation	0 1 -11.5
	children [ 
		DEF LuzCentro SpotLight {					
			on FALSE
			intensity 0.9
			ambientIntensity 0.2
			color 1 .7 0
			location 0 0 0		
    		direction 0 -3 0
    		beamWidth 0.785
    		cutOffAngle 0.785
    		radius 8.0
    		attenuation 1 0 0
		}
	]
}
	DEF SensorCentro ProximitySensor {
    	enabled TRUE
    	center 0 0 0
    	size   5 5 5
	} 
	ROUTE SensorCentro.isActive 
	TO LuzCentro.on

