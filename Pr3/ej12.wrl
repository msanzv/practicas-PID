	translation	0 0 -12
	children Shape {
		appearance Appearance {
			material Material { }
			texture ImageTexture {
				url "../../VRML/Libro/Texturas/BRICKFLM.JPG"
				repeatS TRUE
				repeatT TRUE
			}
