#VRML V2.0 utf8


EXTERNPROTO Puerta [
	field MFString url
	field SFString description
] "Puerta.wrl#Puerta"

Group {
	children [
		##---------------------
		## Paredes
		##---------------------
		Shape {
			appearance Appearance {
				material Material { 
					diffuseColor 0.9 0.9 0.9 
				}
			}
			geometry Box {
				size 4 2 3
			}
		}
		##---------------------
		## Puerta
		##---------------------

		Transform {
			translation 2 -.25 0
			children Transform {
				#rotation 0 1 0 -.785
				children [
					#--- Hoja ---#
					Shape {
						appearance Appearance {
							material Material { diffuseColor 0.3 0.2 0.0 }
						}
						geometry Box { size .1 1.5 1.0 }
					}
					#--- Pomo ---#
					Transform {
						translation .1 0 .4
						children Anchor { 
							url "Limbo.wrl#ViewPoint1" 	
							description "Este lugar... Â¿No te da mala espina?" 
							children Shape {
								appearance Appearance {
									material Material {
										diffuseColor .31 .22 0
										specularColor .65 .73 .11
										ambientIntensity .00333
										shininess .11
									}
								}
								geometry Sphere { radius .05 }
							}
						}
					}
				]
			}
		}

		##---------------------
		## Techo
		##---------------------
		Transform {
			scale 1.2 1.5 2
			translation 0 1 0
			children [
				Shape {
					appearance Appearance {
						material Material { 
							diffuseColor 0.5 0.2 0.0 
						}
					}
					geometry IndexedFaceSet {
						coord Coordinate {
							point [-2 0 1, -2 0 -1, -2 1 0, 
									2 0 1,  2 0 -1,  2 1 0]
						}
						coordIndex [ 2 1 0 -1, 		# Trasera 
									 3 4 5 -1, 		# Frontal
									 0 3 5 2 -1, 	# Izquierda
									 1 2 5 4 -1, 	# Derecha
									 0 1 4 3 		# Inferior
									]
					}
				}
			]
		}

	] 
}