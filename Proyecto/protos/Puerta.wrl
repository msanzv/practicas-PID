## Puerta
##---------------------
PROTO Puerta [
	field MFString url "../ENTRADA.wrl#ViewPoint1"
	field SFString description "Oh, nada especial por aqu√≠..."
] {
	Billboard {
		children Transform {
			rotation 0 1 0 -1.57
			children [
				#--- Hoja ---#
				Shape {
					appearance Appearance {
						material Material { diffuseColor 0.3 0.3 0.3 }
					}
					geometry Box { size .1 1.5 1.0 }
				}
				#--- Pomo ---#
				Transform {
					translation .1 0 .4
					children Anchor { 
						url IS url 	
						description IS description 
						children Shape {
							appearance Appearance {
								material Material {
									diffuseColor .31 .22 0
									specularColor .65 .73 .11
									ambientIntensity .00333
									shininess .11
								}
							}
							geometry Sphere { radius .05 }
						}
					}
				}
			]
		}
	}
}

